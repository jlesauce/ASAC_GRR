{% extends 'layoutsimple.twig' %}

{% import 'messagesysteme.twig' as msgSyst %}
{% import 'champs.twig' as form %}

{% block css %}
{% endblock %}

{% block content %}
		<div id="container">

			<h3 style="text-align:center;">{{trad.match_area}}{{trad.deux_points}} {{domaine.area_name}} {% if domaine.access == "r" %} (<span class="avertissement">{{trad.access}}</span>){% endif %}</h3>

			<h2>{{trad.utilisateurs_ayant_privileges_sur_domaine}}</h2>

			{% if admindomaine or accesdomaine %}
				{% if admindomaine %}
					<!-- Utilisateurs : administrateur du domaine -->
					<h3>{{trad.utilisateurs_administrateurs_domaine}}</h3>
					<ul>
					{% for adminD in admindomaine %}
						<li>{{adminD.nom}} {{adminD.prenom}} ({{adminD.login}}) {% if adminD.etat == "inactif" %} - <i>{{trad.no_activ_user}}</i> {% endif %}</li>
					{% endfor %}
					</ul>
				{% endif %}

				{% if accesdomaine %}
					<!-- Utilisateurs : ayant accÃ¨s au domaine restreint-->
					<h3>{{trad.utilisateurs_acces_restreint_domaine}}</h3>
					<ul>
					{% for accesD in accesdomaine %}
						<li>{{accesD.nom}} {{accesD.prenom}} ({{accesD.login}}) {% if accesD.etat == "inactif" %} - <i>{{trad.no_activ_user}}</i> {% endif %}</li>
					{% endfor %}
					</ul>
				{% endif %}
			{% else %}
				<p>{{trad.aucun_autilisateur}}</p>
			{% endif %}
		</div>
{% endblock %}

{% block javascript %}
{% endblock %}